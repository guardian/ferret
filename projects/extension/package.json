{
	"name": "@guardian/ferret-extension",
	"version": "1.0.0",
	"author": "Sam Cutler <sam.cutler@guardian.co.uk>",
	"license": "MIT",
	"scripts": {
		"build": "yarn clean && yarn build::content_scripts",
		"build::content_scripts": "webpack -p --config=content_scripts.webpack.config.js",
		"build::browser_action": "webpack -p --config=browser_action.webpack.config.js",
		"clean": "yarn clean::content",
		"clean::content": "rimraf extension/content_scripts/*",
		"lint::ts": "tslint './src/**/*.ts*' --format stylish --project . --force",
		"lint::web-ext": "web-ext lint -s extension",
		"watch::content_scripts": "webpack --watch --config=content_scripts.webpack.config.js",
		"watch::browser_action": "webpack --watch --config=browser_action.webpack.config.js",
		"watch::background": "webpack --watch --config=background.webpack.config.js",
		"watch::web-ext": "web-ext run -s build --verbose"
	},
	"devDependencies": {
		"@babel/cli": "^7.5.5",
		"@babel/core": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"@babel/preset-react": "^7.0.0",
		"@types/chrome": "^0.0.91",
		"@types/node": "^12.7.4",
		"@types/react": "^16.9.2",
		"@types/react-dom": "^16.9.0",
		"awesome-typescript-loader": "^5.2.1",
		"babel-loader": "^8.0.6",
		"copy-webpack-plugin": "^5.1.0",
		"css-loader": "^3.2.0",
		"express": "^4.17.1",
		"file-loader": "^4.2.0",
		"html-webpack-plugin": "^3.2.0",
		"image-webpack-loader": "^5.0.0",
		"react": "^16.9.0",
		"react-breakpoints": "^3.0.3",
		"react-dom": "^16.9.0",
		"react-icons": "^3.7.0",
		"react-input-autosize": "^2.2.2",
		"react-router-dom": "^5.0.1",
		"rimraf": "^3.0.0",
		"sass-loader": "^7.3.1",
		"style-loader": "^1.0.0",
		"tslint": "^5.19.0",
		"typescript": "^3.5.3",
		"uglifyjs-webpack-plugin": "^2.2.0",
		"web-ext": "^3.1.1",
		"webpack": "^4.39.3",
		"webpack-cli": "^3.3.7",
		"webpack-dev-middleware": "^3.7.0",
		"webpack-merge": "^4.2.2"
	},
	"dependencies": {
		"@guardian/threads": "^0.21.36",
		"html-webpack-root-plugin": "^0.10.0"
	}
}

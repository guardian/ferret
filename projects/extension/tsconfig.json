{
	"compilerOptions": {
		"target": "es5",
		"module": "amd",
		"moduleResolution": "node",
		"lib": ["dom", "esnext", "es2019", "esnext.array"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react"
	},
	"include": ["packages/**/*"],
	"awesomeTypescriptLoaderOptions": {
		"reportFiles": ["./packages/**/*"]
	}
}

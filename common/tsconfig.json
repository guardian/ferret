{
	"compilerOptions": {
		"baseUrl": "./src",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"moduleResolution": "node",

		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"outDir": "./dist/",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5"
	},
	"include": ["src/**/*"]
}
